<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Maps">
    <fragment
        android:id="@+id/google_maps"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="55dp">


    </fragment>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="bottom"
        android:layout_alignParentBottom="true">
        <Button
            android:id="@+id/BTN_ValidGPS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:background="#06C30D"
            android:gravity="center"
            android:text="Terminer"
            android:textColor="#FFF"
            android:textSize="18dp"
            android:textStyle="bold"

            />
        <TextView
            android:id="@+id/TV_lat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="latitude : 0.000000"
            android:layout_toRightOf="@id/BTN_ValidGPS"
            android:layout_marginTop="10dp"
            android:textSize="16dp"
            android:layout_marginStart="10dp"
            android:textColor="#000"
            />
        <TextView
            android:id="@+id/TV_lgt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="longitude : 0.000000"
            android:layout_below="@id/TV_lat"
            android:layout_toRightOf="@id/BTN_ValidGPS"
            android:layout_marginTop="5dp"
            android:textSize="16dp"
            android:layout_marginStart="10dp"
            android:textColor="#000"
            />


    </RelativeLayout>


    <ImageButton
        android:id="@+id/BTN_Current"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="100dp"
        android:background="#FFF"
        android:minWidth="48dp"
        android:minHeight="48dp"
        android:src="@drawable/person_24"
        tools:ignore="SpeakableTextPresentCheck" />

</RelativeLayout>